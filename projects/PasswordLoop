correct = 'bumbus'
tries = 3
counter = 0
keepGoing = True


while(keepGoing):
    if input("What is the password? \n") == correct:
        print('Congratulations old chum youve got the password and I am now cooming')
        keepGoing = False
    else:
        print('YOU FUCO \n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n')
        counter += 1

    if counter == tries:
        print("you have doomed us all!!!")
        keepGoing = False
